{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/data": ["./src/data/*"]
    },
    
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"]
}
